<% if @answer.errors.present? %>
  $('.new-answer form').replaceWith("<%= j render 'answers/form', answer: @answer %>");
<% else %>
  <% if remotipart_submitted? %>
    $('.answers').append("<%= j "#{render @answer}" %>");
  <% else %>
    $('.answers').append('<%= j render @answer %>');
  <% end %>
  $('.new-answer #answer_body').val('');
  $('.nested-fields').remove();
<% end %>
