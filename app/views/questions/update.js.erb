<% if @question.errors.present? %>
  $('form.edit_question').replaceWith("<%= j render 'form', question: @question %>");
  $('form.edit_question').show();
<% else %>
  <% if remotipart_submitted? %>
    $('.question').replaceWith("<%= j "#{render @question }" %>");
  <% else %>
    $('.question').replaceWith("<%= j render @question %>");
  <% end %>
<% end %>
$('.flash').replaceWith('<%= j render 'layouts/flash' %>');
